@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-2">
        @* Buraya kategoriler gelecek *@
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-10">
        <div class="row">
            @foreach (var product in Model)
            {
                //Daha sonra, buraya yazacağımız kodları PARTIAL olarak tasarlayacağız.

                <div class="col-md-3">
                  @await Html.PartialAsync("_Product",product);
                </div>
            }
        </div>
    </div>
</div>
