@model List<Product>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">

            @if (Model.Count == 0)
            {
                <partial name="_NoProduct" />
            }
            else
            {

                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <partial name="_Product"  />
                        @*@await Html.PartialAsync("_Product", product)*@
                    </div>
                }
            }
        </div>
        @* Buraya sayfalama ile ilgili kodlarımız gelecek *@
    </div>
</div>