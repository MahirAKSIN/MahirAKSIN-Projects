@model IEnumerable<Kutuphane.Models.Turler>

@{
    ViewData["Title"] = "Kitap Turleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="d-flex justify-content-center align-content-md-center" asp-action="Create">Kitap Turleri</a>
</p>
<table class="table " >
    <thead>
        <tr class="bg-light d-flex justify-content-center align-content-md-center">
            <th>
                @Html.DisplayNameFor(model => model.TurAd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class=" d-flex justify-content-center align-content-md-center" >
            <td>
                @Html.DisplayFor(modelItem => item.TurAd)
            </td>
            <td class="">
                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-dark text-white"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
