@model List<Kitaplar>
@{

    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1 class="display-5">Kitaplar</h1>
    <a asp-action="Create" class="btn btn-outline-dark text-white my-2">Yeni Kitap Ekle<i class="bi bi-file-plus-fill"></i><i
            class="bi bi-book"></i> </a>
</div>
<div class="container">
    <div class="d-flex justify-content-center align-content-center">
        <table class="table table-dark w-75 text-center ">
            <thead class="bg-success">
                <tr>
                    <th>Kitap Id</th>
                    <th>Kitap Ad</th>
                    <th>Yapılacak İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kitap in Model)
                {
                    <tr>
                        <td>@kitap.Isbn</td>
                        <td>@kitap.Ad</td>
                        <td>
                            <a class="btn btn-lg btn-outline-success " asp-action="Details" asp-route-id="@kitap.Isbn">
                                <i class="bi bi-ticket-detailed"></i>
                            </a>
                            <a class="btn btn-lg btn-outline-warning" asp-action="Edit" asp-route-id="@kitap.Isbn">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-lg btn-outline-danger" asp-action="Delete" asp-route-id="@kitap.Isbn">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a class="btn btn-lg btn-light text-dark" asp-controller="Home" asp-action="Index"
                               asp-route-id="@kitap.Isbn"><i class="bi bi-house"></i></a>


                            

                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
</div>
