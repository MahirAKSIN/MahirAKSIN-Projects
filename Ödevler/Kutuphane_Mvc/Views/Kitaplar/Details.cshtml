@model Kitaplar
@{
    ViewData["Title"] = @Model.Ad + " adlı kitabın detayları";
}

<h3>@Model.Ad adlı kitabın detayları</h3>
<hr>
<div>
    <h6>Kitabın ISBN:</h6>
    <p>@Model.Isbn</p>

    <h6>Kitabın Adı:</h6>
    <p>@Model.Ad</p>

    <h6>Kitabın Sayfa Sayısı:</h6>
    <p>@Model.SayfaSayisi</p>

    <h6>Kitabın Stok Miktarı:</h6>
    <p>@Model.Stok</p>

    <h6>Kitabın Türü:</h6>
    <p>@Model.Turler.TurAd</p>
    
    <h6>Kitabın Yazarı:</h6>
    <p>@Model.Yazarlar.AdSoyad</p>
    
    <h6>Kitabın Yayınevi:</h6>
    <p>@Model.YayinEvleri.Ad</p>

</div>