@model EF_Core_MVC_Code.Models.Yazarlar;

@{

    ViewData["Title"] = "Delete Sayfasi";
}


<div class="container d-flex justify-content-center align-content-center  ">
    <table class="table table-dark w-50 m-3">
        <thead>
            <tr>
                <td>Yazar Kayit Numarası </td>
                <td>Yazar Ad Soyad </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.AdSoyad</td>
                <td>
                    <form asp-action="Delete" >
                        <input type="hidden" asp-for="Id" />
                        
                        <input type="submit" class="btn btn-outline-danger btn-lg" value="Yazar Sil"/>

                        <a asp-action="Index" type="submit" class="btn btn-outline-warning btn-lg"><i class="bi bi-arrow-counterclockwise"></i></a>


                    </form>
                </td>
            </tr>
        </tbody>

    </table>

</div>
