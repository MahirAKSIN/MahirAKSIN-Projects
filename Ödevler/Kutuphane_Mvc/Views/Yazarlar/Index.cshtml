@model List<Yazarlar>
@{ ViewData["Title"] = "Yazarlar"; }

<h3 class="text-center">Yazarlar</h3>


<table class="table table-dark w-75 text-center">
    <thead>
        <tr>
            <td> Yazar ID </td>
            <td> Yazar Adi Soyadi </td>
            <td> Yazar Email </td>
            <td> Yapilacak Islem </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.AdSoyad</td>
    <td>@item.Mail</td>
    <td>
        <a asp-action="Details" class="btn btn-outline-success btn-lg " asp-route-id="@item.Id"> <i class="bi bi-ticket-detailed"></i></a>
        <a asp-action="Edit" class="btn btn-outline-warning btn-lg" asp-route-id="@item.Id">Edit</a>
    </td>

</tr> }

    </tbody>



</table>








