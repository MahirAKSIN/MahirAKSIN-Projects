@model EF_Core_MVC_Code.Models.Yazarlar;

@{

    ViewData["Title"] = "Edit";
   
}
<a asp-action="Index"><i class="bi bi-arrow-counterclockwise"></i></a>



<h3 class="text-center m-3">Yazarın kayıt numarası:@Model.Id</h3>

<div class="container  w-50">
    <div class="row">
        <div class="col">
            <form asp-action="Eidt" class="d-flex justify-content-center align-content-center w-50">
                <div class="form-group d-block ">

                    <label class="control-label">Yazar Adı  </label>
                    <input type="text" class="form-control " asp-for="AdSoyad" />
                    <label class="label-control">Email</label>
                    <br />
                    <input type="email" name="Mail" asp-for="Mail" />
                    <br />
                    <div>
                        <label asp-for="TurlerId" class="control-label">Yazdığı Turler</label>
                        <select asp-for="TurlerId" asp-items="@ViewBag.Tur" class="control-select form-control " type="text" name="Turler"></select>
                    </div>
                    <button asp-action="Edit" type="submit" class="btn btn-outline-dark btn-lg m-4 ">Değişiklikleri Kaydet</button>

                </div>
            </form>
        </div>
    </div>
</div>


