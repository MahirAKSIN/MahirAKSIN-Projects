@model EF_Core_MVC_Code.Models.Turler
@{

    ViewData["Title"] = "Edit";
}
<h1 class="display-4 text-center">Kitap Türü Düzenle</h1>
<hr>

<div class="container d-flex justify-content-center bg-danger  w-50">
    <div class="row ">
        <div class=" col-xxl-4 text-center">
            <form asp-action="Edit">
                <div class="form-group">
                    <label class="control-label text-white">Tür Id :</label>
                    <label class="control-label" asp-for="Id">@Model.Id</label><br>
                    <label class="control-label text-white">Kitap Türü </label>
                    <input class="form-control text-danger opacity-50" type="text" asp-for="TurAd">
                </div>
                <div class="form-group">
                    <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-outline-dark  text-white">
                    <a asp-action="Index" class="btn btn-outline-dark text-white "><i class="bi bi-arrow-counterclockwise "></i></a>
                </div>
            </form>
        </div>
    </div>


</div>
