@model SalesProject.Models.Entities.Product;
@{
    ViewData["Title"] = "ResimEkle";

}


<h3 class="text-center">Resim Yukle</h3>
<hr>


<div class="row d-flex justify-content-center ">
        <div>
            <div class="col-sm-4 col-md-6 col-xl-12">



                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="control-label">Product Name</label>
                        <input type="text" asp-for="ProductName" class="form-control" required>
                        <label class="control-label">Product Price</label>
                        <input type="text" asp-for="ProductPrice" class="form-control" required>
                      
                    </div>


                    <div class="form-group">
                        <h5 class="display-3">Resim Yükle</h5>
                        <div class="form-group"></div>
                        <label>Resim yolu</label>
                        <input type="file" name="file" class="form-control h-50" />
                        <div class="form-group">
                            <input type="submit" class="btn btn-outline-dark my-2" />

                        </div>
                        <input type="submit" value="Kaydet" class="btn btn-success">
                        <a asp-action="Index"><i class="bi bi-arrow-counterclockwise bg-info btn btn-sm p-2 px-2"></i></a>
                    </div>
                </form>
            </div>
        </div>

    </div>



