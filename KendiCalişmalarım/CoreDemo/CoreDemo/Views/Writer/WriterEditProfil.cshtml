
@model EntityLayer.Writer;

@{
    ViewData["Title"] = "WriterEditProfil";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


@using (Html.BeginForm("WriterEditProfil", "Writer", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic form elements</h4>
                <p class="card-description"> Basic form elements </p>             
                @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })

                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>

                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Sifre</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Gorsel Ekle </label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Gorsel Sec</button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Guncelle</button>
                    <button class="btn btn-light">Cıkıs Yap</button>
                </form>
            </div>
        </div>
    </div>

}