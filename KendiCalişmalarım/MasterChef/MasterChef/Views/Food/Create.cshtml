@model EntityLayer.Concrete.Food;
@{
    ViewData["Title"] = "Resim Ekle";
}
<h3 class="text-center">Görsel Yukle</h3>
<hr>
<div class="row d-flex justify-content-center ">
    <div>
        <div class="col-sm-4 col-md-6 col-xl-12">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="control-label">Food Name</label>
                    <input type="text" asp-for="FoodContent" class="form-control" required>
                    <label class="control-label">Product Price</label>
                    <input type="datetime" asp-for="FoodCreateDate" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="control-label">Resim Yükle</label>
                    <input type="file" name="file" class="form-control h-50 my-3" />
                    <input type="submit" value="Kaydet" class="btn btn-success">
                    <a asp-action="Index" class="btn btn-outline-primary">Ana Yemek Sayfasına Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
